@model EsseEhBom.Pages.Series.IndexModel

@{
    ViewData["Title"] = "Index";
}

<h1>Séries</h1>

<p>
    <a asp-page="Create">Sugerir uma nova série no catálogo</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Serie[0].Title)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Serie[0].Director)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Serie[0].Country)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Serie[0].Release)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.Serie) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Title)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Director)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Country)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Release)
            </td>
            <td>
                <!--<a asp-page="./Edit" asp-route-id="@item.Id">Editar</a> |-->
                <a asp-page="./Details" asp-route-id="@item.Id">Detalhe</a> <!--|-->
